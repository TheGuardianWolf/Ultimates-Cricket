@model Ultimates_Cricket.Models.Stat

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Stat</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Game.GameNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="number" value="@Model.Game.GameNumber" class="form-control" readonly />
                <span asp-validation-for="GameId" class="text-danger">@Html.ValidationMessage("GameId")</span>
            </div>
            <input type="hidden" name="GameId" value="@Model.GameId" />
        </div>
        <div class="form-group">
            <label asp-for="Player.Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="text" value="@Model.Player.Name" class="form-control" readonly />
                <span asp-validation-for="PlayerId" class="text-danger">@Html.ValidationMessage("PlayerId")</span>
            </div>
            <input type="hidden" name="PlayerId" value="@Model.PlayerId" />
        </div>
        <div class="form-group">
            <label asp-for="Batting" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Batting" class="form-control" />
                <span asp-validation-for="Batting" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Bowling" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Bowling" class="form-control" />
                <span asp-validation-for="Bowling" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-controller="Games" asp-action="Details" asp-route-id="@Model.GameId">Back to Game Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
